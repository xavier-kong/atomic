{
    "name": "server",
    "version": "1.0.0",
    "description": "server for atomic",
    "main": "index.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "startdev": "nodemon index.ts",
        "generate": "graphql-codegen"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@graphql-codegen/cli": "^2.6.2",
        "@graphql-codegen/typescript": "^2.4.5",
        "@graphql-codegen/typescript-resolvers": "^2.5.2",
        "@types/graphql": "^14.5.0",
        "nodemon": "^2.0.15",
        "prisma": "^3.9.2",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@prisma/client": "^3.9.2",
        "apollo-server-core": "^3.6.3",
        "apollo-server-express": "^3.6.3",
        "express": "^4.17.2",
        "graphql": "^16.3.0"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": [
            "plugin:react/recommended",
            "airbnb",
            "prettier",
            "airbnb-typescript"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "project": "./tsconfig.json",
            "tsconfigRootDir": "./client",
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "settings": {
            "import/resolver": {
                "node": {
                    "extensions": [
                        ".js",
                        ".jsx",
                        ".ts",
                        ".tsx"
                    ]
                }
            }
        },
        "rules": {
            "react/jsx-filename-extension": [
                2,
                {
                    "extensions": [
                        ".ts",
                        ".tsx",
                        ".js"
                    ]
                }
            ],
            "react/react-in-jsx-scope": "off",
            "no-use-before-define": "off",
            "react/jsx-props-no-spreading": "off",
            "react/function-component-definition": [
                2,
                {
                    "namedComponents": "arrow-function",
                    "unnamedComponents": "arrow-function"
                }
            ],
            "comma-dangle": "off",
            "@typescript-eslint/comma-dangle": [
                "off"
            ]
        }
    }
}
